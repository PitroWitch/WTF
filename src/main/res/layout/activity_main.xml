<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#D9DD45"
    android:fadingEdge="horizontal|vertical"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".MainActivity"
    tools:visibility="visible">

    <Button
        android:id="@+id/Butt1"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="0dp"
        android:layout_height="135dp"
        android:layout_marginTop="72dp"
        android:backgroundTint="#EDD30C0C"
        android:backgroundTintMode="src_atop"
        android:stateListAnimator="@android:anim/overshoot_interpolator"
        android:text="@string/btn_1"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="#FBEF03"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:verticalScrollbarPosition="left"
        app:layout_constraintEnd_toStartOf="@+id/Butt2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Butt2"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="0dp"
        android:layout_height="135dp"
        android:layout_marginTop="72dp"
        android:backgroundTint="#668F36"
        android:backgroundTintMode="src_atop"
        android:stateListAnimator="@android:anim/bounce_interpolator"
        android:text="@string/btn_2"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="#1E1818"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:verticalScrollbarPosition="right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/Butt1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Butt3"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="0dp"
        android:layout_height="119dp"
        android:layout_gravity="center"
        android:layout_marginStart="1dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="446dp"
        android:backgroundTint="#0B2E88"
        android:elevation="@android:dimen/app_icon_size"
        android:stateListAnimator="@android:animator/fade_out"

        android:text="@string/btn_3"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="#FAFAFA"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:verticalScrollbarPosition="defaultPosition"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Butt1"
        app:layout_constraintVertical_bias="0.106"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>